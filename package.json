{
  "name": "elbespararen_v9",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:wrangler": "wrangler pages dev .next --compatibility-date=2025-03-25 --d1=DB=elbespararen-db",
    "dev:next": "next dev --turbopack",
    "build": "next build",
    "build:cloudflare": "npx @cloudflare/next-on-pages",
    "build:worker": "npx @cloudflare/next-on-pages && node scripts/clean-build.js",
    "build:standard": "next build",
    "preview": "npm run build:cloudflare && wrangler pages dev",
    "deploy": "npm run build:cloudflare && wrangler pages deploy",
    "start": "next start",
    "lint": "eslint",
    "test": "jest --watch",
    "test:ci": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "verify": "node scripts/verify-setup.js",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:migrate": "wrangler d1 migrations apply elbespararen-db",
    "db:migrate:remote": "wrangler d1 migrations apply elbespararen-db --remote",
    "db:create": "wrangler d1 create elbespararen-db",
    "db:seed": "wrangler d1 execute elbespararen-db --file=scripts/seed-simple.sql",
    "db:seed:remote": "wrangler d1 execute elbespararen-db --remote --file=scripts/seed-simple.sql"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "autoprefixer": "^10.4.20",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.546.0",
    "next": "15.0.3",
    "openai": "^6.4.0",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swiper": "^12.0.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react-dom": "^18",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "vercel": "^34.0.0",
    "wrangler": "^4.38.0"
  }
}
