# Elbespararen v7 - Environment Variables
# Kopiera denna fil till .env.local och fyll i dina värden

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Din OpenAI API-nyckel för GPT-4o Vision
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# TELEGRAM BOT (valfritt)
# ===========================================
# Telegram bot token för notifikationer
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram chat ID för admin-notifikationer
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# För utveckling: använd mock data (inget värde behövs)
# För produktion: Cloudflare D1 database binding
# DB=your_cloudflare_d1_database_binding

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Miljö (development/production)
NODE_ENV=development

# App URL (för produktion)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# CLOUDFLARE CONFIGURATION (för produktion)
# ===========================================
# Cloudflare Account ID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare API Token
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ===========================================
# SECURITY
# ===========================================
# Secret key för sessioner (generera en säker nyckel)
NEXTAUTH_SECRET=your_nextauth_secret_here

# ===========================================
# EMAIL CONFIGURATION (valfritt)
# ===========================================
# För e-postnotifikationer via MailerLite HTTP API
MAILERLITE_API_KEY=your_mailerlite_api_key
MAIL_FROM=info@elchef.se
MAIL_FROM_NAME=Elchef.se
MAILERLITE_GROUP_NEWSLETTER=169680723602572313
MAILERLITE_GROUP_RECEIPTS=169692592654518080

# Debug/test endpoint controls (optional)
EMAIL_TEST_ENABLED=false
EMAIL_TEST_TOKEN=change-me

# ===========================================
# ANALYTICS (valfritt)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# FEATURE FLAGS
# ===========================================
# Aktivera/deaktivera funktioner
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_TELEGRAM_NOTIFICATIONS=false
